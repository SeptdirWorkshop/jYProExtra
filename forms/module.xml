				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="unset_components" type="unsetcomponents" addfieldpath="/plugins/system/jyproextra/fields"
				   label="PLG_SYSTEM_JYPROEXTRA_MODULE_UNSET_COMPONENTS"
				   description="PLG_SYSTEM_JYPROEXTRA_MODULE_UNSET_COMPONENTS_DESC"
				   multiple="true"
				   layout="joomla.form.field.list-fancy-select"
				   class="input-xxlarge">
