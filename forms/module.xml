				   label="PLG_SYSTEM_JYPROEXTRA_MODULE_UNSET_CUSTOMIZER"
				   description="PLG_SYSTEM_JYPROEXTRA_MODULE_UNSET_CUSTOMIZER_DESC"
				   class="btn-group btn-group-yesno"
				   default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
